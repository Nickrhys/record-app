.container
  - if @records.any?
    %ul
    - @records.each do |record|
      %li
        = link_to record.name, record_path(record)
        = "- "
        = record.artist.name
      .li
        = image_tag record.avatar_url(:thumb) if record.avatar?
  - else
    %h1
      no records added
  = link_to "add a record", new_record_path

