.container
.ul
  .li 
    = @record.name
  .li
    = @record.artist.name
  .li
    = image_tag(@record.avatar_url) if @record.avatar?
  .ul
  - @record.tracks.each do |track|
    .ul
      = track.name
  = link_to "edit", edit_record_path(@record)
  = button_to "Delete #{@record.name}", record_path(@record), method: :delete
